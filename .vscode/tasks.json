{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SERVER",
            "command": "/usr/bin/g++",
            "args": [
                "-DSERVER_BUILD",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/server/server_main.cpp",
                "${workspaceFolder}/server/handle.cpp",
                "-o", 
                "${workspaceFolder}/server/server_app",
                "-I/usr/include/mariadb",
                "-lmariadb",
                "-lpthread",
                "-std=c++11"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build CLIENT",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/client/client_cplus.cpp",
                "${workspaceFolder}/client/client_handle.cpp",
                "-o", 
                "${workspaceFolder}/client/client_app",
                "-lpthread",
                "-std=c++11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}