{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SERVER",
            "command": "/usr/bin/g++",
            "args": [
                "-DSERVER_BUILD",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/server/serve_cplus.cpp",
                "${workspaceFolder}/server/handle.cpp",
                "-o",
                "${workspaceFolder}/server/server_app",
                "-I/usr/include/mariadb",
                "-I/usr/include/mariadb/mysql",
                "-L/usr/lib/x86_64-linux-gnu",
                "-no-pie",
                "-std=c++11",
                "-lpthread",
                "-lmariadbcpp",
                "-lmariadb"
            ],
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "type": "cppbuild",
            "label": "Build CLIENT",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/client/client_cplus.cpp",
                "${workspaceFolder}/client/client_handle.cpp",
                "-o",
                "${workspaceFolder}/client/client_app",
                "-I${workspaceFolder}/server",
                "-lpthread",
                "-std=c++11"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build ALL",
            "dependsOn": [
                "Build SERVER",
                "Build CLIENT"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run SERVER",
            "type": "shell",
            "command": "${workspaceFolder}/server/server_app",
            "options": {
                "cwd": "${workspaceFolder}/server"
            },
            "problemMatcher": []
        },
        {
            "label": "Run CLIENT",
            "type": "shell",
            "command": "${workspaceFolder}/client/client_app",
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "problemMatcher": []
        }
    ]
}
