{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build SERVER",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "${fileDirname}/server_c++.cpp",
                "${fileDirname}/../server/handle.cpp",
                "-o", "${fileDirname}/server_app",
                "-I/usr/include/mariadb",
                "-lmariadb",
                "-lpthread",
                "-std=c++11"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Build CLIENT",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/client_c++.cpp", // 경로 확인 필요!
                "-o", "${fileDirname}/client_app",
                "-lpthread",
                "-std=c++11"
            ],
            "group": "build"
        }
    ]
}